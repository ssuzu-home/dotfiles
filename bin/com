#!/bin/bash

name=$(basename "${1:-name}")

cat <<-END >${1:-/dev/stdout}
#!/bin/bash
#
# @(#) $name v0.0.1 $(date +%Y.%m.%d)
#
# Usage:
#   $name TODO:
# Description:
#   DESCRIPTION TODO:
#
# Copyright (c) $(date +%Y) b4b4r07 (a.k.a. BABAROT)
# see also <https://github.com/b4b4r07>
#
# License:
#   GNU General Public License version 3
#
######################################################################

set -eu

. \$DOTPATH/etc/lib/vital.sh
. \$DOTPATH/etc/lib/standard.sh

usage=\$(cat <<-HELP
usage: $name
HELP
)

main() {
    if [[ "\${1:-}" == "-h" || "\${1:-}" == "--help" ]]; then
        die "\$usage"
    fi
    :
}
main \${@+"\$@"}
END

[ -f "$name" ] && chmod 755 "$name"
